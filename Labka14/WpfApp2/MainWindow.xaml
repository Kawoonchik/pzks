<Window x:Class="AsyncLoadingDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Async Loading" Height="200" Width="350">

    <StackPanel Margin="20">
        <ProgressBar x:Name="LoadingBar" Height="30" Minimum="0" Maximum="100"/>
        <Button Content="Start Loading" Height="30" Margin="0,15,0,0"
                Click="Start_Click"/>
        <TextBlock x:Name="StatusLabel" FontSize="16" Margin="0,10,0,0"/>
    </StackPanel>

</Window>
