<Window x:Class="CountdownThread.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Countdown" Height="200" Width="300">

    <StackPanel Margin="20">
        <TextBox x:Name="SecondsInput" Height="30" FontSize="16" />
        <Button Content="Start" Height="30" Margin="0,10,0,0"
                Click="Start_Click"/>
        <TextBlock x:Name="TimerLabel" FontSize="24" Text="00" 
                   HorizontalAlignment="Center" Margin="0,20,0,0"/>
    </StackPanel>
</Window>
