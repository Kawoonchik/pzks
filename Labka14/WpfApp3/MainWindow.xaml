<Window x:Class="PingTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lab 14 - Ping Tool" Height="450" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Введіть базову адресу підмережі (наприклад, 192.168.0.):"/>
            <TextBox x:Name="txtSubnet" Text="192.168.0." Margin="0,5,0,5" Padding="5"/>
            <Button x:Name="btnScan" Content="Сканувати мережу" Click="BtnScan_Click" Padding="5"/>
        </StackPanel>

        <ListBox x:Name="lstResults" Grid.Row="1"/>

        <StatusBar Grid.Row="2">
            <TextBlock x:Name="txtStatus" Text="Готовий до роботи"/>
        </StatusBar>
    </Grid>
</Window>